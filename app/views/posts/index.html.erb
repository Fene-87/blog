<section class='main_section'>
  <div class='user_card'>
    <div class='user_img'>
      <img src= <%= @user.photo %> alt= <%= @user.name %> />
    </div>

    <div class='user_stuff'>
      <p class='user_name'><%= @user.name %></p>
      <p class='posts_no'>Number of Posts: <%= @user.postscounter || 0 %></p>
    </div>
  </div>

  <ul class='posts_list'>
    <% @user.posts.each_with_index do |post, index|%>
      <li>
        <div class='post_card'>
          <h4><%= link_to post.title, user_post_path(@user, post) %></h4>
          <p class='post_text'><%= post.text%></p>
          <div class='comments_likes'>
            <p class='comments_no'>Comments: <%= post.comments_counter || 0 %></p>
            <p class='likes_no'>Likes: <%= post.likes_counter || 0 %></p>
          </div>

          <ul class='comments_list'>
            <% post.comments.each do |comment| %>
              <li class='comment_info'>
                <p class='comment_author'><%= comment.author.name %>:</p>
                <p class='comment_text'><%= comment.text %></p>
              </li>
            <% end %>
          </ul>
        </div>

      </li>
    <% end %>
  </ul>

  <a href="#">Pagination</a>
</section>