<section class='main_section'>
  <div class='user_card'>
    <div class='user_img'>
      <img src= <%= @user.photo %> alt= <%= @user.name %> />
    </div>

    <div class='user_stuff'>
      <p class='user_name'><%= @user.name %></p>
      <p class='posts_no'>Number of Posts: <%= @user.postscounter || 0 %></p>
    </div>
  </div>

  <ul>
    <% @user.posts.each_with_index do |post, index|%>
      <li>
        <div>
          <h4>post #<%= index + 1%></h4>
          <p><%= post.text%></p>
          <div>
            <p>Comments: <%= post.comments_counter || 0 %></p>
            <p>Likes: <%= post.likes_counter || 0 %></p>
          </div>
        </div>
        <ul>
          <% post.comments.each do |comment|%>
            <li>
              <p><%= comment.author.name %></p>
              <p><%= comment.text %></p>
            </li>
          <% end %>
        </ul>
      </li>
    <% end %>
  </ul>

  <a href="#">Pagination</a>
</section>