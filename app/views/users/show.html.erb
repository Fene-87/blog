<h1>Here is user information for a given user</h1>
<section>
  <div>
    <div>
      <img src= <%= @user.photo %> alt= <%= @user.name %> />
    </div>

    <div>
      <h2><%= @user.name %></h2>
      <p>Number of Posts: <%= @user.postscounter || 0 %></p>
    </div>
  </div>
 
  <div>
    <h4>Bio</h4>
    <p><%= @user.bio %></p>
  </div>

  <ul>
    <% if @user.posts.empty? %>
      <li><%= @user.name %> has no posts</li>
    <% end %>

    <% @user.recent_posts.each_with_index do |post, index| %>
      <li>
        <h4>Post #<%= index + 1 %></h4>
        <p><%= post.text %></p>
        <div>
          <p>Comments: <%= post.comments_counter || 0 %></p>
          <p>Likes: <%= post.likes_counter || 0 %></p>
        </div>
      </li>
    <% end %>
  </ul>

  <a href="<%= @user.id %>/posts">See all posts</a>
</section>

