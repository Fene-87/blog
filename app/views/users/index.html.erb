<h1>Here is a list of all users</h1>

<section>
  <ul>
    <% @users.each do |user| %>
      <li>
        <div>
          <img src= <%= user.photo %> alt= <%= user.name %> />
        </div>

        <div>
          <p><%= user.name %></p>
          <p>Number of Posts: <%= user.postscounter || 0 %></p>
        </div>
      </li>
    <% end %>
</ul>
</section>